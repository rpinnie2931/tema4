{
  "env": {
    "browser": false,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "settings": {
    "react": {
      "version": "detect" // Detecta automáticamente la versión de React
    }
  },
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "off"
  }
}
